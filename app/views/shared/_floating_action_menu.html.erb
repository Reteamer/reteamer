<div class="fab-container">
  <div class="fab fab-icon-holder">
    <i class="fas fa-plus"></i>
  </div>

  <ul class="fab-options">
    <% if enabled_menu_options.include? FloatingActionMenu::TEAM %>
      <li onclick="(() => { window.dispatchEvent(new CustomEvent('newTeamStarted', {}) )})()">
        <span class="fab-label">Add New Team</span>
        <div class="fab-icon-holder">
          <i class="fas fa-users"></i>
        </div>
      </li>
    <% end %>
    <% if enabled_menu_options.include? FloatingActionMenu::PERSON %>
      <li onclick="(() => { window.dispatchEvent(new CustomEvent('newPersonStarted', {}) )})()">
        <span class="fab-label">Add New Person</span>
        <div class="fab-icon-holder">
          <i class="fas fa-user"></i>
        </div>
      </li>
    <% end %>
    <% if enabled_menu_options.include? FloatingActionMenu::ASSIGNMENT %>
      <li>
        <span class="fab-label">Add New Assignment</span>
        <div class="fab-icon-holder">
          <i class="fas fa-network-wired"></i>
        </div>
      </li>
    <% end %>
    <% if enabled_menu_options.include? FloatingActionMenu::PROPOSAL %>
      <li onclick="(() => { window.dispatchEvent(new CustomEvent('newProposalStarted', {}) )})()">
        <span class="fab-label">Add New Proposal</span>
        <div class="fab-icon-holder">
          <i class="fas fa-clipboard-list"></i>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<% if enabled_menu_options.include? FloatingActionMenu::PERSON %>
  <%= render "people/new_person_modal", selected_date: selected_date %>
<% end %>

<% if enabled_menu_options.include? FloatingActionMenu::TEAM %>
  <%= render "teams/new_team_modal", selected_date: selected_date %>
<% end %>

<% if enabled_menu_options.include? FloatingActionMenu::PROPOSAL %>
  <%= render "proposal/new_proposal_modal" %>
<% end %>
