<date-navigator class="px-4 h-full" style="display:block" data-controller="date-navigator" data-action="newData@window->date-navigator#handleNewData" data-date-navigator-starting-date-value="<%= selected_date %>">
  <input type="text"
         name="effective_date"
         id="effective_date"
         class="form-control-inline flatpickr-input active"
         data-date-navigator-target="dateInput"
         data-action="datePicked@window->date-navigator#handleDateChange change->date-navigator#handleInputChange"
         data-controller="flatpickr"
         readonly="readonly"
         value="<%= selected_date %>"
    />
</date-navigator>
